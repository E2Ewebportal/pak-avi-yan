
@{
    ViewBag.Title = "AddComment";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<section id="content">

    <div class="g12 nodrop" style="margin-left: 0px;">
        <h1 style="margin-top: 0px;">Add New Comment</h1>
        <p style="margin-bottom: 5px;">Add New Comment Data!</p>
    </div>

    <div class="g12" style="margin: auto 0px;">
        <form id="formAddComment" action="/Reviewer/SaveCommentData" method="post" autocomplete="on">

            <input type="hidden" id="CommentID" name="CommentID" value="0" />

            <fieldset>

                <section>
                    <label for="CommendDescription">Commend Description</label>
                    <div><textarea id="CommendDescription" name="CommendDescription" required class="g12" rows="4"></textarea></div>
                </section>

                <section>
                    <div>
                        <button class="submit" name="submitbuttonname" value="submitbuttonvalue">Submit</button>
                        <button class="reset">Reset</button>
                        <button class="btn" name="btncancel" value="btncancel" onclick="window.history.go(-1); return false;">Cancel</button>
                    </div>
                </section>
            </fieldset>
        </form>
    </div>
</section>

<script>

    var $content = $('#content');
    $content.find('form').wl_Form({
        onSuccess: function (data, status) {
            var res = JSON.parse(data);
            if (res.Code == "1") {
                $.msg(res.Message);
                $content.find('form').wl_Form('reset');
                //setTimeout(function () {
                //    window.location = '/Home/Confirmation';
                //}, 2000);
            }
            else
            {
                $.msg(res.Message);
            }

    	},
    	onError: function(status, error, jqXHR){
            $.msg(res.Message);
    	}
    });

</script>

