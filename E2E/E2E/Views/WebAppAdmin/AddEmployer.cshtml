
@{
    ViewBag.Title = "AddEmployer";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<section id="content">

    <div class="g12 nodrop" style="margin-left: 0px;">
        <h1 style="margin-top: 0px;">Add Employer</h1>
        <p style="margin-bottom: 5px;">Add new Employer</p>
    </div>

    <div class="g12" style="margin: auto 0px;">
        <form id="form" action="submit.php" method="post" autocomplete="off">
            <fieldset>

                <section>
                    <label for="EmployerName">Employer Name</label>
                    <div><input type="text" id="EmployerName" name="EmployerName" required class="g6"></div>
                </section>

                <section>
                    <label for="BusinessName">Business Name</label>
                    <div><input type="text" id="BusinessName" name="BusinessName" required class="g6"></div>
                </section>

                <section>
                    <label for="BusinessAddress1">Business Address1</label>
                    <div><textarea id="BusinessAddress1" name="BusinessAddress1" required class="g12" rows="4"></textarea></div>
                </section>

                <section>
                    <label for="BusinessAddress2">Business Address2</label>
                    <div><textarea id="BusinessAddress2" name="BusinessAddress2" required class="g12" rows="2"></textarea></div>
                </section>

                <section>
                    <label for="City">City</label>
                    <div><input type="text" id="City" name="City" required class="g2"></div>
                </section>

                <section>
                    <label for="State">State</label>
                    <div><input type="text" id="State" name="State" required class="g2"></div>
                </section>

                <section>
                    <label for="zip">zip</label>
                    <div><input type="number" id="zip" name="zip" required class="g1 integer"></div>
                </section>

                <section>
                    <label for="Phone">Phone</label>
                    <div><input type="text" id="Phone" name="Phone" required class="g3"></div>
                </section>

                <section>
                    <label for="Fax">Fax</label>
                    <div><input type="text" id="Fax" name="Fax" required class="g3"></div>
                </section>

                <section>
                    <label for="PrimaryEmail">PrimaryEmail</label>
                    <div><input type="email" id="PrimaryEmail" name="PrimaryEmail" required class="g4"></div>
                </section>

                <section>
                    <label for="SecondaryEmail">Secondary Email</label>
                    <div><input type="email" id="SecondaryEmail" name="SecondaryEmail" required class="g4"></div>
                </section>

                <section>
                    <label for="URL">URL</label>
                    <div><input type="url" id="URL" name="URL" required class="g8 placeholder" placeholder="http://"></div>
                </section>

                <section>
                    <label for="TotalEmployees">Total Employees</label>
                    <div><input type="number" id="TotalEmployees" name="TotalEmployees" required class="g1 integer"></div>
                </section>

                <section>
                    <label for="BusinessTaxID">Business Tax ID</label>
                    <div><input type="text" id="BusinessTaxID" name="BusinessTaxID" required class="g4"></div>
                </section>

                <section>
                    <label>Active</label>
                    <div>
                        <input type="radio" id="ActiveYes" name="Active" value="first" required checked><label for="required_first_radio">Yes</label>
                        <input type="radio" id="ActiveNo" name="Active" value="second"><label for="required_second_radio">No</label>
                    </div>
                </section>
                <section>
                    <div>
                        <button class="reset">Reset</button>
                        <button class="submit" name="submitbuttonname" value="submitbuttonvalue">Submit</button>
                    </div>
                </section>
            </fieldset>
        </form>
    </div>
</section>

