
@{
    ViewBag.Title = "Confirmation";
    ViewBag.FormTitle = "Confirmation";
    Layout = "~/Views/Shared/_LayoutPageLogin.cshtml";
}
<style>
    body#error #content h1 {
        font-size: 70px !important;
        letter-spacing: -4px !important;
    }
</style>

@{

    if (TempData["ConfirmationType"] != null && TempData["ConfirmationType"].ToString() == "EmailSent")
    {

        <h1>Success</h1>
        <h2>Email Sent!</h2>
        <hr>
        <p>Reset password link has been sent on your email.</p>
        <p>Please check your email to reset your password.</p>
        <a class="btn small" href="~/Home/Index">&lsaquo; Back to Login</a>
    }
    else if (TempData["ConfirmationType"] != null && TempData["ConfirmationType"].ToString() == "PasswordReset")
    {

        <h1>Success</h1>
        <h2>Password Reset!</h2>
        <hr>
        <p>You password has been reset now.</p>
        <p>You can login now using your new password.</p>
        <a class="btn small" href="~/Home/Index">&lsaquo; Back to Login</a>
    }
    else if (TempData["ConfirmationType"] != null && TempData["ConfirmationType"].ToString() == "InvalidCode")
    {

        <h1>Invalid</h1>
        <h2>Code!</h2>
        <hr>
        <p>There is invalid code in URL.</p>
        <p>Please check your email for valid link or Contact Website Administrator!</p>
        <a class="btn small" href="~/Home/Index">&lsaquo; Back to Login</a>
    }
    else if (TempData["ConfirmationType"] != null && TempData["ConfirmationType"].ToString() == "AlreadySignUp")
    {

        <h1>Already</h1>
        <h2>Signup!</h2>
        <hr>
        <p>You have already signup with E2EWebPortal</p>
        <p>Please login with your Email. If you forget your password, You can reset it using Froget Password on Login Page!</p>
        <a class="btn small" href="~/Home/Index">&lsaquo; Back to Login</a>
    }
    else if (TempData["ConfirmationType"] != null && TempData["ConfirmationType"].ToString() == "SignUpSuccessful")
    {

        <h1>Success</h1>
        <h2>Signup!</h2>
        <hr>
        <p>You have successfully signup with E2EWebPortal</p>
        <p>Please login with your User Name and Password!</p>
        <a class="btn small" href="~/Home/Index">&lsaquo; Back to Login</a>
    }
    else
    {
    }
}
<script>
    $(document).ready(function () {
        $("body").attr("id", "error");
    });
</script>

